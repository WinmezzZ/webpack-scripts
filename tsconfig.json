{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ESNext",
        "lib": ["ESNext"],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "declarationDir": "lib",
        "declaration": true,
        "emitDeclarationOnly": true
    },
    "include": ["config", "scripts", "src", "utils", "./env.d.ts"]
}
